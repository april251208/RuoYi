@import '~@/utils/utils.less';

.${ClassName}tableList {
  .${ClassName}tableListOperator {
    margin-bottom: 16px;
    button {
      margin-right: 8px;
    }
  }
  .totals {
    text-align: center;
    padding-bottom: 24px;
    border-bottom: solid 1px #dcdcdc;
    margin-bottom: 24px;
  }
  .total {
    font-weight: 700;
    font-size: 1.5rem;
  }
}

.${ClassName}tableListForm {
  :global {
    .ant-form-item {
      display: flex;
      margin-right: 0;
      margin-bottom: 24px;
      > .ant-form-item-label {
        width: auto;
        padding-right: 8px;
        line-height: 32px;
      }
      .ant-form-item-control {
        line-height: 32px;
      }
    }
    .ant-form-item-control-wrapper {
      flex: 1;
    }
  }
  .submitButtons {
    display: block;
    margin-bottom: 24px;
    white-space: nowrap;
  }
}

@media screen and (max-width: @screen-lg) {
  .${ClassName}tableListForm :global(.ant-form-item) {
    margin-right: 24px;
  }
}

@media screen and (max-width: @screen-md) {
  .${ClassName}tableListForm :global(.ant-form-item) {
    margin-right: 8px;
  }
}